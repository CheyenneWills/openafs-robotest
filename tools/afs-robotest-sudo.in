/usr/vice/etc/afsd ?.*
${VOS} create .*
"""

def is_rm_root(cmd_line):
    """Returns true if this command could remove the root dir."""
    args = shlex.split(cmd_line)
    if len(args) > 0 and args[0] == 'rm':
        for arg in args:
            if arg.startswith('-'):
                continue
            if os.path.realpath(arg) == '/':
                return True
    return False

def is_allowed(cmd_line):
    """Return true if this command is permitted."""

    # Take special care of rm commands, regardless of the ALLOW list.
    if is_rm_root(cmd_line):
        sys.stderr.write("afs-robotest-sudo: Invalid rm command: %s\n" % (cmd_line));
        return False

    for pattern in ALLOW.splitlines():
        pattern = pattern.strip()
        if pattern == "" or pattern.startswith("#"):
            continue
        if re.match(pattern + "$", cmd_line):
            return True
    return False

def main(args):
    """Run permitted commands as root."""
    if os.getuid() != 0:
        sys.stderr.write("afs-robotest-sudo: Must run as root.\n");
        sys.exit(os.EX_USAGE)
    if len(args) == 0:
        sys.stderr.write("usage: afs-robotest-sudo <command-line>\n")
        sys.exit(os.EX_USAGE)
    cmd_line = " ".join(args)
    if not is_allowed(cmd_line):
        sys.stderr.write("afs-robotest-sudo: Command not permitted: %s\n" % (cmd_line));
        sys.exit(os.EX_NOPERM)
    args = shlex.split(cmd_line)
    rc = subprocess.call(args)
    if rc:
        sys.exit(os.EX_SOFTWARE)
    sys.exit(os.EX_OK)

main(sys.argv[1:])
