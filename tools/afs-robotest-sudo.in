import shlex
import subprocess

ALLOW = """
${AFS_SRV_LIBEXEC_DIR}/bosserver ?.*
${ASETKEY} add .*
${BOS} adduser .*
${BOS} create .*
${BOS} setcell .*
${BOS} shutdown .*
chmod 755 ${AFS_CONF_DIR}
chmod 755 ${AFS_LOCAL_DIR}
chmod \+x /etc/init.d/afs
cp ${AFS_CONF_DIR}/CellServDB ${AFS_DATA_DIR}/CellServDB
cp ${AFS_CONF_DIR}/CellServDB ${AFS_DATA_DIR}/CellServDB.local
cp ${AFS_CONF_DIR}/ThisCell ${AFS_DATA_DIR}/ThisCell
cp ${AFS_CSDB_DIST} ${AFS_DATA_DIR}/CellServDB.dist
cp -r -p \S+ /usr/afs
cp -r -p \S+ /usr/afsws
cp -r -p \S+ /usr/vice
cp \S+ ${AFS_CONF_DIR}/CellServDB
cp \S+ ${AFS_CONF_DIR}/krb.conf
cp \S+ ${AFS_CONF_DIR}/rxkad.keytab
cp \S+ ${AFS_CONF_DIR}/ThisCell
cp \S+ ${AFS_DATA_DIR}/cacheinfo
cp \S+ ${AFS_DATA_DIR}/CellServDB.dist
cp \S+ ${AFS_DATA_DIR}/CellServDB.local
cp \S+ ${AFS_DATA_DIR}/ThisCell
cp \S+ ${AFS_LOCAL_DIR}/NetInfo
cp \S+ /etc/init.d/afs
cp \S+ /etc/sysconfig
cp ./site/CellServDB.client ${AFS_DATA_DIR}/CellServDB
cp \S+ /usr/afs/lib
cp \S+ /usr/vice/etc/config
/etc/init.d/afs .*
insmod .*(lib|open)afs.*\.ko
mkdir -p /afs
mkdir -p ${AFS_CONF_DIR}
