#!/bin/bash
set -e
source ./install/linux-functions.sh

# System-wide prereqs
create_tester "$AFSROBOT_USERNAME" "$SETUP_GROUP"
fixup_etc_hosts "$AFSROBOT_IFDEVICE"

# Install prereqs
export DEBIAN_FRONTEND=noninteractive
apt-get install -q -y python python-pip
if ! python -c 'import argparse' >/dev/null 2>/dev/null; then
    apt-get install -q -y python-argparse
fi
