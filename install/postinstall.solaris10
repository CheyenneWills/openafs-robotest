#!/bin/bash
# Work-around for OpenCSW pip on Solaris 10 to avoid the need to
# mess with the PATH.
set -e
for cli in afsutil; do
    if [ -x /opt/csw/bin/$cli ]; then
        test -h /usr/bin/$cli && rm -f /usr/bin/$cli
        test -f /usr/bin/$cli || ln -s /opt/csw/bin/$cli /usr/bin/$cli
    fi
done
